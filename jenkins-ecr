pipeline {

 
  environment {
        
        registryName = "nodeimage-aswath"
        registryCredential = 'aws-aswath'
        dockerImage = ''
        registryUrl = '437144803032.dkr.ecr.us-east-2.amazonaws.com/nodeimage-aswath'
    }
  
  

  
  
agent any
tools {nodejs "njs-tool"}
stages
{

        stage('Git checkout')

         {
             steps
                {
                    git branch: 'master',
                    credentialsId: 'github-aswath',
                    url: 'https://github.com/aswath-pt/node-js-ecr.git'

                  }
              }
  
  
  
  
stage('Build')
{
          steps

                {
                    sh "npm install"
                  }

}


stage('Test')

              {
                       steps
                             {

                       sh "npm run test"
                              }
                }



 
stage('Building our image') {
steps {
script {
dockerImage = docker.build registryName + ":$BUILD_NUMBER"
 
}
}
}
  
  
  
stage('Pushing to ECR') {
steps {
script {
docker tag nodeimage-aswath:latest 437144803032.dkr.ecr.us-east-2.amazonaws.com/nodeimage-aswath:latest
docker.image('437144803032.dkr.ecr.us-east-2.amazonaws.com/nodeimage-aswath').push("$BUILD_NUMBER")

}
}
}

 
}

  

  


}


}
